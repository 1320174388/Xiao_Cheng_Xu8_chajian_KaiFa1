page{
    background: #F6F6F6;
}
/*将标准盒模型改为怪异盒模型  */
view{
    box-sizing: border-box;
}
.line-gray{
    width: 100%;
    height: 28rpx;
    background: #F6F6F6;
}
/*图片显示外套  */
.image-show-wrap{
    width: 100%;
    position: relative;
    padding-bottom: 24rpx;
    background: #ffffff;
}
.detail{
    width: 60rpx;
    height: 15rpx;
    font-size: 100rpx;
    color: #D8D8D8;
    position: absolute;
    left: 640rpx;
    top: -24rpx;
}
/*列表外套  */
.list-content-wrap{
    font-size: 32rpx;
}
.showName{
    width: 70%;
    height: 95rpx;
    line-height: 95rpx;
    box-sizing: border-box;
    padding-left: 40rpx;
    overflow: hidden;
    font-weight: bold;
}
.product-description{
    width: 100%;
    box-sizing: border-box;
    padding: 24rpx 0 24rpx 40rpx;
}
/*长篇文字部分  */
.image-description{
    width: 100%;
    box-sizing: border-box;
    padding: 24rpx 40rpx;
    color:#aaaaaa;
}
/*编辑和删除样式外套  */
.operation-wrap{
    width: 100%;
    padding-left: 515rpx;
    font-size: 24rpx;
    display: flex;
    height: 40rpx;
}
/*编辑和删除图片样式  */
.edit-image{
    width: 35rpx;
    height: 35rpx;
}
.remove-image{
    width: 30rpx;
    height: 30rpx;
}
/*图片隐藏后的样式  */
.imageHide-wrap{
    width: 100%;
    background: #ffffff;
    position: relative;
}
.imageHide-title{
    padding: 24rpx 0 24rpx 40rpx;
    font-size: 32rpx;
    width: 80%;
    overflow: hidden;
    font-weight: bold;
}
.image-small-title{
    padding: 0 0 24rpx 40rpx;
    font-size: 24rpx;

}
/* 添加按钮部分 */
.fill{
    width: 100%;
    height: 100rpx;
}
.add{
    width: 100%;
    height: 100rpx;
    background: #5DAEF8;
    color: #ffffff;
    line-height: 100rpx;
    position: fixed;
    left: 0;
    bottom: 0;
}
/*地老天荒售后电话  */
.dlth{
  width: 100%;
  text-align: center;
  color: #ccc;
  font-size: 30rpx;
  padding: 10rpx 0 20rpx 0;
}
.dlth_logo{
  width: 400rpx;
  margin-bottom: 10rpx;
}